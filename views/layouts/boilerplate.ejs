 justify-content: center;
}

nav li {
 font-size: 1.5em;
 margin: 0 10px; /* Reduced horizontal margin */
 position: relative; /* Added relative positioning */
}

/* Style for the subfields in the menu */
nav li ul {
 z-index: 3;
 position: absolute;
 top: 100%;
 left: 50%;
 transform: translateX(-50%);
 background-color: #333;
 display: none;
 width: max-content; /* Adjusted width for responsiveness */
}

nav li:hover ul {
 z-index: 3;
 display: block;
}

nav li ul li {
 z-index: 3;
 display: block;
 margin: 0;
 padding: 10px 15px;
}

/* Style for links in the menu */
